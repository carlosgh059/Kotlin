<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prueba4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- *******************************SPLASH SREEEN **********************************-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <!-- Aqui le decimos que en la carpeta drawable,
        creamos un XML y ese es la imagen que va a coger de fondo!
        ES otra manera de hacerlo desde un XML-->
        <!--item name="android:windowBackground">@drawable/splashscreen</item-->

        <!-- Le damos el background que queramos-->
        <item name="windowSplashScreenBackground">@color/amarillo</item>
        <!-- Esto es para aniamar -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/hotel4</item>
        <!-- tiempo de animacion de la duracion. Pero no la duracion del SPLASH -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- Cuando termine pasate al siguiente,es decir, cuando acabes con hotel pasate al stylo de main -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Prueba4</item>
    </style>
    <!--*************************************************************************-->

    <style name="Theme.menus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarillo</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


</resources>